%h1
  OPCS
  %small Operating Procedure Codes

%div{"ng-controller" => "FetchCtrl"}
  %input.form-control{type:'text', placeholder: 'Search', 'ng-model' => 'search', 'ng-keyup' => "searchText()"}

  .list-group
    %a.list-group-item{href: "/code/{{code.id}}", 'ng-repeat' => "code in codes"}
      %h4.list-group-item-heading {{code.name}}
      %p.list-group-item-text {{code.description}}
